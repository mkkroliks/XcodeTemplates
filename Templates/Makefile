XCODE_FILE_TEMPLATES_DIR = ~/Library/Developer/Xcode/Templates/File\ Templates
XCODE_PROJECT_TEMPLATES_DIR = ~/Library/Developer/Xcode/Templates/Project\ Templates

XCODE_FILE_PERSONAL_TEMPLATES_DIR = $(XCODE_FILE_TEMPLATES_DIR)/Personal

XCODE_FILE_GOTICKETY_TEMPLATES_DIR = $(XCODE_FILE_TEMPLATES_DIR)/GoTickety 
GOTICKETY_TEMPLATES_DIR = ./GoTickety

TEMPLATES_DIR = ./

install:
	mkdir -p $(XCODE_FILE_PERSONAL_TEMPLATES_DIR)
	cp -r $(TEMPLATES_DIR)/MVVM.xctemplate $(XCODE_FILE_PERSONAL_TEMPLATES_DIR)

	mkdir -p $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)
	cp -r $(GOTICKETY_TEMPLATES_DIR)/UIKit\ Class.xctemplate $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)
	cp -r $(GOTICKETY_TEMPLATES_DIR)/UIViewController.xctemplate $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)
	cp -r $(GOTICKETY_TEMPLATES_DIR)/UIView.xctemplate $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)
	cp -r $(GOTICKETY_TEMPLATES_DIR)/UITableViewController.xctemplate $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)
	cp -r $(GOTICKETY_TEMPLATES_DIR)/UITableViewCell.xctemplate $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)

uninstall:
	rm -fr $(XCODE_FILE_PERSONAL_TEMPLATES_DIR)/MVVM.xctemplate

	rm -fr $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)/UIKit\ Class.xctemplate
	rm -fr $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)/UIViewController.xctemplate
	rm -fr $(XCODE_FILE_GOTICKETY_TEMPLATES_DIR)/UIView.xctemplate
